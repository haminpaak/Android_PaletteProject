<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp"
    tools:context=".MyProfileActivity">

    <LinearLayout
        android:id="@+id/MyProfile_LinearLayout_TOP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="40dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/MyProfile_ImageButton_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FF0000"
            android:contentDescription="@string/string_my_profile"
            app:srcCompat="@drawable/backbuttonicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/nanumeb"
            android:text="@string/string_my_profile"
            android:textColor="#000000"
            android:textSize="28dp"
            tools:ignore="SpUsage" />

    </LinearLayout>

    <ImageView
        android:id="@+id/MyProfile_ImageView_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MyProfile_LinearLayout_TOP"
        app:srcCompat="@drawable/default_icon" />

    <TextView
        android:id="@+id/MyProfile_TextView_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/nanumr"
        android:text="@string/string_name"
        android:textAlignment="textStart"
        android:textColor="#232323"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MyProfile_ImageView_profile" />

    <TextView
        android:id="@+id/MyProfile_TextView_userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/nanumb"
        android:text="이호은"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/MyProfile_TextView_name"
        app:layout_constraintTop_toBottomOf="@id/MyProfile_ImageView_profile" />

    <TextView
        android:id="@+id/MyProfile_TextView_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/nanumr"
        android:text="@string/string_email"
        android:textAlignment="textStart"
        android:textColor="#232323"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MyProfile_TextView_name" />

    <TextView
        android:id="@+id/MyProfile_TextView_userEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/nanumb"
        android:text="leehe228@konkuk.ac.kr"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/MyProfile_TextView_email"
        app:layout_constraintTop_toBottomOf="@id/MyProfile_TextView_name" />

    <TextView
        android:id="@+id/MyProfile_TextView_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/nanumr"
        android:text="@string/string_age"
        android:textAlignment="textStart"
        android:textColor="#232323"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MyProfile_TextView_email" />

    <TextView
        android:id="@+id/MyProfile_TextView_userAge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/nanumb"
        android:text="20세"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/MyProfile_TextView_age"
        app:layout_constraintTop_toBottomOf="@id/MyProfile_TextView_email" />

    <TextView
        android:id="@+id/MyProfile_TextView_interest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/nanumr"
        android:text="관심 분야"
        android:textAlignment="textStart"
        android:textColor="#232323"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MyProfile_TextView_age" />

    <TextView
        android:id="@+id/MyProfile_TextView_userInterest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/nanumb"
        android:text="레고 전시, \n미디어 아트, \n학생 작품"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/MyProfile_TextView_interest"
        app:layout_constraintTop_toBottomOf="@id/MyProfile_TextView_age" />

    <TextView
        android:id="@+id/MyProfile_TextView_billing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/nanumr"
        android:text="구독권"
        android:textAlignment="textStart"
        android:textColor="#232323"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MyProfile_TextView_userInterest" />

    <TextView
        android:id="@+id/MyProfile_TextView_userBilling"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/nanumb"
        android:text="프리미엄 구독권"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/MyProfile_TextView_billing"
        app:layout_constraintTop_toBottomOf="@id/MyProfile_TextView_userInterest" />

    <Button
        android:id="@+id/MyProfile_Button_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/basic_button"
        android:fontFamily="@font/nanumr"
        android:stateListAnimator="@null"
        android:text="@string/string_edit"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="SpUsage" />

</androidx.constraintlayout.widget.ConstraintLayout>